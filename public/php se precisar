            if ($stmt->execute()) {
                header("Location: login.php?cadastro=sucesso");
                exit();
            } else {
                $erro = "Erro ao cadastrar usuário";
            }
            */
            
            // Por enquanto, apenas simular sucesso
            $sucesso = "Cadastro realizado com sucesso!";
        }
    }
    ?>